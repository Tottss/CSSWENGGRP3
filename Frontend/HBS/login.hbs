<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link rel="stylesheet" href="/CSS/login.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=PT+Serif:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="login-design-3">
      <div class="login-grp">
        <form id="loginForm">
          <!-- Logo + title -->
          <div class="login-parent">
            <img
              class="logo-only-icon"
              src="/ASSETS/logo-only.png"
              alt="Logo"
            />
            <div class="design-3-login">LOGIN</div>
          </div>
          <!-- Username -->
          <label class="username-label" for="username">Username</label>
          <div class="username-container">
            <input id="username" type="text" placeholder="Enter your email" />
          </div>
          <!-- Password -->
          <label class="username-label" for="password">Password</label>
          <div class="username-container">
            <input
              id="password"
              type="password"
              placeholder="Enter your password"
            />
          </div>
          <!-- Remember me -->
          <div class="remember-me-btn">
            <input type="checkbox" id="remember" />
            <label for="remember">Remember me</label>
          </div>
          <!-- Login button -->
          <button type="submit" class="login-btn">Login</button>
          <!-- Register link -->
          <div class="no-account-apply">
            <span class="no-account">No account? </span>
            <a href="apply" class="apply"
              ><i><u>Apply</u></i></a
            >
          </div>
        </form>
      </div>
      <!-- Right section: Background + page name -->
      <div class="right-section">
        <img
          class="background-gif-icon"
          src="/ASSETS/background.gif"
          alt="Background"
        />
        <div class="navy-darkening-fx"></div>
        <div class="page-name">
          <img
            class="official-logo-icon"
            src="/ASSETS/official-logo.png"
            alt="Official Logo"
          />
          <div class="community-partners-portal">Community Partners Portal</div>
          <div class="submit-project-proposals-container">
            <ul class="submit-project-proposals-list">
              <li>Submit Project Proposals</li>
              <li>Monitor Projects</li>
              <li>Generate Progress Reports</li>
              <li>View Calendar of Activities</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Changed this from login to login-drei.js (rename later) -->
    <script src="/JAVASCRIPT/login-drei.js"></script>
  </body>
</html>
