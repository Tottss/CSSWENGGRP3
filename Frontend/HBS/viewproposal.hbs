{{#> main}}
<div class="profileview-container">
    <div class="projects-form-box">
        <h1 class="profile-title">{{projTitle}}</h1>

        <form id="profileForm" enctype="multipart/form-data">

            <!-- Project Title -->
            <label for="orgName" style="font-weight: bold;">Project Title</label>
            {{projTitle}}

            <!-- Project Summary -->
            <label for="ProjSummary" style="font-weight: bold;">Project Summary/Objectives</label>
            {{projSummary}}

            <!-- Target Beneficiaries -->
            <label for="TargetBeneficiaries" style="font-weight: bold;">Target Beneficiaries</label>
            {{targetValue}}

            <!-- Advocacy Area -->
            <label for="AdvocacyArea" style="font-weight: bold;">Advocacy Area</label>
            {{advocacyArea}}

            <!-- SDG Alignment -->
            <label for="SDGAlignment" style="font-weight: bold;">SDG Alignment</label>
            {{SDG}}

            <!-- Timeline -->
            <label for="timelineStart" style="font-weight: bold;">Start Date</label>
            {{startDate}}

            <label for="timelineEnd" style="font-weight: bold;">End Date</label>
            {{endDate}}

            <!-- Proposed Budget -->
            <label for="ProposedBudget" style="font-weight: bold;">Proposed Budget</label>
            {{proposedBudget}}

            <!-- Detailed Proposal -->
            <label for="Proposal" style="font-weight: bold;">Detailed Proposal</label>
            <a href="{{detailedProposal}}" target="_blank">View Detailed Proposal</a>

        </form>
        <br>
        <button class="save-btn" type="button"onclick="window.location.href='/updateproposal/{{proposal_id}}'">Edit Proposal</button>
        <!--Comment sending-->
                <form action="/viewproposal/{{proposal_id}}/comment" method="POST" class="comment-form">
                    <label for="comment">Comments</label>
                    <div class="comment-wrapper">
                        <textarea id="comment" name="comment" class="comment-textarea"
                            placeholder="Write your comment here..."></textarea>
                        <button type="submit" class="submit-comment-btn">Send</button>
                    </div>
                </form>
        <!-- Comments Section -->
        <div class="comments-section">
            <h3>Comments</h3>

            <div class="comments-box">
                {{#each comments}}
                <div class="comment-item">
                    <div class="comment-meta">
                        <span class="comment-author">{{this.admin}}</span> {{!-- can be admin or user --}}
                        <span class="comment-date">{{this.timestamp}}</span>
                    </div>
                    <div class="comment-text">{{this.message}}</div>
                </div>
                {{/each}}
                
                {{#unless comments.length}}
                <div class="no-comments">No comments yet.</div>
                {{/unless}}
            </div>
        </div>

    </div>
</div>
{{/main}}
