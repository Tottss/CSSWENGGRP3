{{#> main}}
<main class="main-content">
    <div class="dashboard-container">
        <div class="dashboard-form-box">
            <h1 class="dashboard-title">Hi, {{PartnerOrg}}!</h1>
            <div class="notification-header">
                <i class="bi bi-bell-fill"></i>
                <!--Black Notifications-->
                <h2 class="Notif">Notifications</h2>
            </div>
            <!--Green Notifications-->
            <div class="Green-header">
                <img src="../ASSETS/Vector.png"></img>
                <h2 class="Notif-white">{{nNotif}} new notification!</h2> 
            </div>
            <br/>
            <br/>
            <!--Management tools buttons-->
            <div class="project-tools">
                <img src="../ASSETS/toolbox.png"></img>
                <h2 class="ProjManage">Project Management Tools</h2>
            </div>
            <div class="dashboard-list">
                <button type="submit" class="dashboard-btn" onclick="window.location.href='/proposal'"><i class="bi bi-newspaper"></i><br/><br/>Submit Project Proposal</button>
                {{!-- if user go to /userdashboard else /admin dashboard --}}
                <button type="submit" class="dashboard-btn" onclick="window.location.href='/tracker'"><i class="bi bi-speedometer"></i><br/><br/>Update Impact Tracker</button>
                <button type="submit" class="dashboard-btn" onclick="window.location.href='/progress'"><i class="bi bi-file-arrow-down-fill"></i><br/><br/>Generate Progress Report</button>
                <button type="submit" class="dashboard-btn" onclick="window.location.href='/viewproposal-list'"><i class="bi bi-pencil-fill"></i><br/><br/>View all proposal</button>
            </div>
            <br/>
            <br/>
            <!-- Community Projects box list-->
            {{>Projectbox Projects=CommunityProjects title="Community Projects" ButtonName="View Project" href="/Communityprojects"}}
            <br/>
            <!--Your Projects box list-->
            {{>Projectbox Projects=YourProjects title="Your Projects" ButtonName="View Project" href="/Yourprojects"}}
            <br/>
        </div>
    </div>
</main>
{{/main}}